<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Quiz5">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correct answer:"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:textSize="18dp"/>


    <TextView
        android:id="@+id/showvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="0/5"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/question"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="148dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:onClick="connection"
        android:text="Show Question"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <RelativeLayout
        android:id="@+id/choose1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="40dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/a"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_abcd"
            android:fontFamily="@font/roboto_bold"
            android:text="A. Indonesia"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/choose2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/choose1">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/b"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_abcd"
            android:fontFamily="@font/roboto_bold"
            android:text="B. Malaysia"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/choose3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:layout_marginTop="213dp"
        android:layout_marginLeft="40dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/c"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_abcd"
            android:fontFamily="@font/roboto_bold"
            android:text="C. Arab"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/choose4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:layout_marginTop="213dp"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/choose3">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/d"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_abcd"
            android:fontFamily="@font/roboto_bold"
            android:text="D. China"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="600dp"
        android:background="@drawable/ic_button_login"
        android:fontFamily="@font/roboto_bold"
        android:text="Finish"
        android:textSize="18dp" />

</RelativeLayout>